<scene>
  <description text="A particle hits a fixed edge at a right angle. The particle should reverse direction, and the edge should stay put."/>

  <duration time="4.0"/>
  <integrator type="explicit-euler" dt="0.01"/>
  <collision type="simple"/>

  <particle m="1.0" px="0.0" py="0.0" vx="0.0" vy="-1.0" fixed="0" radius="0.2"/>

  <particle m="1.0" px="-1.0" py="-1.0" vx="0.0" vy="0.0" fixed="1" radius="0.2"/>
  <particle m="1.0" px=" 1.0" py="-1.0" vx="0.0" vy="0.0" fixed="1" radius="0.2"/>

  <edge i="1" j="2" radius="0.075"/>
</scene>
